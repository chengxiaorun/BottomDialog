<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f3f5"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/topbar"
        android:layout_width="0dp"
        android:layout_height="54dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="底部选择框"
            android:textSize="16sp"/>
    </RelativeLayout>
    <TextView
        android:background="#fff"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:id="@+id/tv_string"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:text="单个添加"
        app:layout_constraintTop_toBottomOf="@id/topbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
         />
    <TextView
        android:background="#fff"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:id="@+id/tv_listString"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:text="添加String集合"
        app:layout_constraintTop_toBottomOf="@id/tv_string"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:background="#fff"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:id="@+id/tv_listCustomString"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:text="自定义对象集合"
        app:layout_constraintTop_toBottomOf="@id/tv_listString"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:background="#fff"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:id="@+id/tv_cancel"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:text="不弹出取消按钮"
        app:layout_constraintTop_toBottomOf="@id/tv_listCustomString"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>